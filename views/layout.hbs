<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" type="text/css" href="/libraries/jquery.fullPage.css" />
    <link rel="stylesheet" href="/libraries/pnotify.custom.min.css">
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>

    {{{body}}}

    <script type="text/javascript" src="/libraries/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="/libraries/scrolloverflow.min.js"></script>
    <script type="text/javascript" src="/libraries/jquery.fullPage.min.js"></script>
    <script src="/libraries/pnotify.custom.min.js"></script>
    <script type="text/javascript" src="/javascripts/main.js"></script>

    {{#each successMessages}}
      <script type="text/javascript">
        $(function(){
            new PNotify({
                type: 'success',
                text: '{{ this }}'
            });
        });
      </script>
    {{/each}}

    {{#each errorMessages}}
      <script type="text/javascript">
        $(function(){
            new PNotify({
                type: 'error',
                text: '{{ this }}'
            });
        });
      </script>
    {{/each}}

  </body>
</html>