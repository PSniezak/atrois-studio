{{#each data}}
	<form action="/projects/edit/{{this.id}}" method="POST">
		<label for="year">Année</label>
		<input type="text" name="year" id="year" value="{{this.year}}">
		
		<label for="client">Client</label>
		<input type="text" name="client" id="client" value="{{this.client}}">

		<label for="name">Nom</label>
		<input type="text" name="name" id="name" value="{{this.name}}">

		<label for="categories">Catégories</label>
		<input type="text" name="categories" id="categories" value="{{this.categories}}">

		<label for="season">Saison</label>
		<input type="text" name="season" id="season" value="{{this.season}}">

		<label for="url">Lien</label>
		<input type="text" name="url" id="url" value="{{this.url}}">

		<label for="description">Description</label>
		<input type="text" name="description" id="description" value="{{this.description}}">

		<label for="place">Ordre</label>
		<input type="text" name="place" id="place" value="{{this.place}}">

		<input type="submit" value="Éditer ce projet">
	</form>
{{/each}}
