<% for(var i=0; i<data.length; i++) { %>
	<form action="/projects/edit/<%= data[i].id %>" method="POST" enctype="multipart/form-data">
		<label for="year">Année</label>
		<input type="text" name="year" id="year" value="<%= data[i].year %>">

		<label for="client">Client</label>
		<input type="text" name="client" id="client" value="<%= data[i].client %>">

		<label for="client_en">Client EN</label>
		<input type="text" name="client_en" id="client_en" value="<%= data[i].client_en %>">

		<label for="client_jp">Client JP</label>
		<input type="text" name="client_jp" id="client_jp" value="<%= data[i].client_jp %>">

		<label for="client_kor">Client KOR</label>
		<input type="text" name="client_kor" id="client_kor" value="<%= data[i].client_kor %>">


		<label for="name">Nom</label>
		<input type="text" name="name" id="name" value="<%= data[i].name %>">

		<label for="name_en">Nom EN</label>
		<input type="text" name="name_en" id="name_en" value="<%= data[i].name_en %>">

		<label for="name_jp">Nom JP</label>
		<input type="text" name="name_jp" id="name_jp" value="<%= data[i].name_jp %>">

		<label for="name_kor">Nom KOR</label>
		<input type="text" name="name_kor" id="name_kor" value="<%= data[i].name_kor %>">


		<label for="categories">Catégories</label>
		<input type="text" name="categories" id="categories" value="<%= data[i].categories %>">

		<label for="categories_en">Catégories EN</label>
		<input type="text" name="categories_en" id="categories_en" value="<%= data[i].categories_en %>">

		<label for="categories_jp">Catégories JP</label>
		<input type="text" name="categories_jp" id="categories_jp" value="<%= data[i].categories_jp %>">

		<label for="categories_kor">Catégories KOR</label>
		<input type="text" name="categories_kor" id="categories_kor" value="<%= data[i].categories_kor %>">


		<label for="season">Saison</label>
		<input type="text" name="season" id="season" value="<%= data[i].season %>">

		<label for="season_en">Saison EN</label>
		<input type="text" name="season_en" id="season_en" value="<%= data[i].season_en %>">

		<label for="season_jp">Saison JP</label>
		<input type="text" name="season_jp" id="season_jp" value="<%= data[i].season_jp %>">

		<label for="season_kor">Saison KOR</label>
		<input type="text" name="season_kor" id="season_kor" value="<%= data[i].season_kor %>">


		<label for="url">Lien</label>
		<input type="text" name="url" id="url" value="<%= data[i].url %>">

		<label for="description">Description</label>
		<textarea type="text" name="description" id="description" rows="8" cols="80"><%= data[i].description %></textarea>

		<label for="description_en">Description EN</label>
		<textarea type="text" name="description_en" id="description_en" rows="8" cols="80"><%= data[i].description_en %></textarea>

		<label for="description_jp">Description JP</label>
		<textarea type="text" name="description_jp" id="description_jp" rows="8" cols="80"><%= data[i].description_jp %></textarea>

		<label for="description_kor">Description KOR</label>
		<textarea type="text" name="description_kor" id="description_kor" rows="8" cols="80"><%= data[i].description_kor %></textarea>


		<label for="place">Ordre</label>
		<input type="text" name="place" id="place" value="<%= data[i].place %>">

		<label for="cover">Cover</label>
		<img width="50" src="/uploads/projects/covers/<%= data[i].cover %>">
		<input type="file" name="cover" id="cover">

		<label for="showcase_cover">Cover</label>
		<img width="50" src="/uploads/projects/covers/<%= data[i].showcase_cover %>">
		<input type="file" name="showcase_cover" id="showcase_cover">

		<input type="submit" value="Éditer ce projet">
	</form>
<% } %>
