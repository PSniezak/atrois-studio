<!DOCTYPE html>
<html>
  <head>
    <title>Atrois Studio - Projets </title>

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/manifest.json">
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="theme-color" content="#ffffff">

    <link rel="stylesheet" type="text/css" href="/libraries/jquery.fullPage.css" />
    <link rel="stylesheet" href="/libraries/pnotify.custom.min.css">
    <link rel="stylesheet" href="/stylesheets/normalize.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>

  <body>

    <div>
      <p><a href="/admin">Retour au dashboard</a><hr></p>
      <p><a href="/projects/add">Ajouter un projet</a></p>

      <% if (data) { -%>
        <table style="width: 100%;">
          <tr style="width: 100%;">
            <th>Cover</th>
            <th>Name</th>
            <th>Year</th>
            <th>Action</th>
          </tr>

          <% for(var i=0; i<data.length; i++) { %>
            <tr style="width: 100%;">
              <td>
                <% if(data[i].cover) { %>
                  <img width="50" src="/uploads/projects/covers/<%= data[i].cover %>">
                <% } else { %>
                  <img width="50" src="http://placehold.it/50x50">
                <% } %>
              </td>
              <td><%= data[i].name %></td>
              <td><%= data[i].year %></td>
              <td>
                <a href="/projects/edit/<%= data[i].id %>">Editer ce projet</a><br>
                <a href="/projects/media/<%= data[i].id %>">GÃ©rer les medias</a><br>
                <a href="/projects/delete/<%= data[i].id %>">Supprimer ce projet</a>
              </td>
            </tr>
          <% } %>
        </table>
      <% } else { -%>
        <tr>Aucun projet disponible.</tr>
      <% } -%>
  	</div>

    <script type="text/javascript" src="/libraries/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="/libraries/scrolloverflow.min.js"></script>
    <script type="text/javascript" src="/libraries/jquery.fullPage.min.js"></script>
    <script src="/libraries/pnotify.custom.min.js"></script>
    <script type="text/javascript" src="/javascripts/main.js"></script>

    <script>
      <% if (successMessages) { %>
        <% for(var i=0; i<successMessages.length; i++) { %>
          $(function(){
            new PNotify({
              type: 'success',
              text: '<%= successMessages[i] %>'
            });
          });  
        <% } %>
      <% } %>

      <% if (errorMessages) { %>
        <% for(var i=0; i<errorMessages.length; i++) { %>
          $(function(){
            new PNotify({
                type: 'error',
                text: '<%= errorMessages[i] %>'
            });
          });  
        <% } %>
      <% } %>
    </script>

  </body>
</html>