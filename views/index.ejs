    <div id="main">
      <div id="header-desktop" class="toggler">
        <div class="container">
          <div class="left">
            <h1><a href="#accueil">Atrois Studio</a></h1>
          </div><div class="middle">
            <nav id="menu-desktop">
              <ul>
                <li data-menuanchor="à-propos">
                  <a href="#à-propos">À propos</a>
                  <div class="highliner"></div>
                </li>

                <li data-menuanchor="contact">
                  <a href="#contact">Contact</a>
                  <div class="highliner"></div>
                </li>

                <li data-menuanchor="presse">
                  <a href="#presse">Presse</a>
                  <div class="highliner"></div>
                </li>

                <li data-menuanchor="store">
                  <a href="#store">Store</a>
                  <div class="highliner"></div>
                </li>
              </ul>
            </nav>
            </div><div class="right">
            <ul>
              <li><a class="languages" href="/jp">日本</a></li>
              <li><a class="languages" href="/kor">대한민국</a></li>
              <li><a class="languages" href="/en">English</a></li>
            </ul>
          </div>
        </div>
      </div>

      <div id="header-mobile">
        <div class="container">
          <div class="menu-icon">
            <span class="hamb-menu"></span>
          </div>
          <div class="logo">
            <a href="#accueil">Atrois Studio</a>
          </div>
          <div class="mobile-close-button"></div>
        </div>
      </div>

      <div id="menu-container-mobile">
        <div class="container">
          <div class="languages">
            <ul>
              <li><a class="languages" href="/en">English</a></li>
              <li><a class="languages" href="/kor">대한민국</a></li>
              <li><a class="languages" href="/jp">日本</a></li>
            </ul>
          </div>

          <nav id="menu-mobile">
            <ul>
              <li data-menuanchor="à-propos">
                <a href="#à-propos">À propos</a>
                <div class="highliner"></div>
              </li>

              <li data-menuanchor="contact">
                <a href="#contact">Contact</a>
                <div class="highliner"></div>
              </li>

              <li data-menuanchor="presse">
                <a href="#presse">Presse</a>
                <div class="highliner"></div>
              </li>

              <li data-menuanchor="store">
                <a href="#store">Store</a>
                <div class="highliner"></div>
              </li>
            </ul>
          </nav>

          <div class="social">
            <ul>
              <li><a target="-_blank" href="https://www.instagram.com/atroistudio/">Instagram</a></li>
              <li><a target="-_blank" href="https://www.facebook.com/atroistudio/">Facebook</a></li>
              <li><a target="-_blank" href="https://www.behance.net/atroistudio">Behance</a></li>
              <li><a target="-_blank" href="https://fr.pinterest.com/atroistudio/">Pinterest</a></li>
            </ul>
          </div>
        </div>

        <div class="copyright">
          <p>© (2016 - 2017)</p>
        </div>
      </div>

      <div id="projects-sliders">
        <div class="close-button">
          <img src="/images/cross.png" alt="Close">
        </div>

        <% for(var j=0; j<projects.length; j++) { %>
          <div id="<%= projects[j].id %>" class="unique-slider">
            <div class="slide presentation-slide">
            <div class="left-cover"></div>
            <div class="right-cover"></div>
              <div class="presentation-container">
                <div class="left">
                  <span class="client"><%= projects[j].client %></span>
                  <br>
                  <span class="season"><%= projects[j].season %></span>
                  <br>
                  <p class="categories"><%= projects[j].categories %></p>
                  <div class="url-container">
                    <a class="url" target="_blank" href="http://<%= projects[j].url %>"><%= projects[j].url %></a>
                  </div>
                </div>
                <div class="right">
                  <span class="name"><%= projects[j].name %></span>
                  <br>
                  <div class="overflower-container">
                    <div class="overflower">
                      <p class="description"><%- projects[j].description %></p>
                    </div>
                    <a class="toggle-more">+ d'informations sur ce projet</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>

      <div id="fullpage">
        <!-- HOME -->
        <div data-anchor="accueil" id="section-home" class="section">
          <div class="background-slider">
            <% for(var z=0; z<projects.length; z++) { %>
              <% if (projects[z].showcase) { %>
                <% if (projects[z].showcase_cover) { %>
                  <% if (projects[z].showcase_type == "video/mp4") { %>
                    <div class="background-slide" data-name="<%= projects[z].name %>-<%= projects[z].id %>" data-id="<%= projects[z].id %>">
                      <video class="background-video" loop muted data-autoplay>
                  			<source src="/uploads/projects/covers/<%= projects[z].showcase_cover %>" type="video/mp4">
                  		</video>
                    </div>
                  <% } else { %>
                    <div class="background-slide" data-lazy="/uploads/projects/covers/<%= projects[z].showcase_cover %>" style="background-image: url(/uploads/projects/covers/<%= projects[z].showcase_cover %>)" data-name="<%= projects[z].name %>-<%= projects[z].id %>" data-id="<%= projects[z].id %>"></div>
                  <% } %>
                <% } %>
              <% } %>
            <% } %>
          </div>

          <div style="display: none" class="background-slider-mobile">
            <% for(var z=0; z<projects.length; z++) { %>
              <% if (projects[z].showcase) { %>
                <% if (projects[z].showcase_cover_mobile) { %>
                  <% if (projects[z].showcase_type_mobile == "video/mp4") { %>
                    <div class="background-slide" data-name="<%= projects[z].name %>-<%= projects[z].id %>" data-id="<%= projects[z].id %>">
                      <video class="background-video" loop muted data-autoplay>
                  			<source src="/uploads/projects/covers/<%= projects[z].showcase_cover_mobile %>" type="video/mp4">
                  		</video>
                    </div>
                  <% } else { %>
                    <div class="background-slide" data-lazy="/uploads/projects/covers/<%= projects[z].showcase_cover_mobile %>" style="background-image: url(/uploads/projects/covers/<%= projects[z].showcase_cover_mobile %>)" data-name="<%= projects[z].name %>-<%= projects[z].id %>" data-id="<%= projects[z].id %>"></div>
                  <% } %>
                <% } %>
              <% } %>
            <% } %>
          </div>

          <div class="arrow-down">
            <a><img src="/images/arrow-down.png" alt="Navigation - Flèche vers le bas"></a>
          </div>
        </div>

        <!-- PROJECTS -->
        <div data-anchor="projets" id="section-projects" class="section">
          <div class="container">
            <% if (years) { %>
              <% for(var i=0; i<years.length; i++) { %>
                <div class="year-section">
                  <div class="year <% if(i === 0) { %>year-fixed<% } %>" data-year="<%= years[i].year %>">
                    <span><%= years[i].year %></span>
                  </div>
                  <ul class="projects-list">
                    <% for(var j=0; j<projects.length; j++) { %>
                      <% if(projects[j].year == years[i].year) { %>
                        <a class="project-link" data-name="<%= projects[j].name %>-<%= projects[j].id %>" data-id="<%= projects[j].id %>">
                          <div class="project-cover" style="background-image: url(/uploads/projects/covers/<%= projects[j].cover %>);"></div>
                          <li>
                            <span class="client blend"><%= projects[j].client %></span>
                            <br>
                            <span class="title blend"><%= projects[j].name %></span>
                            <p class="categories blend"><%= projects[j].categories %></p>
                          </li>
                        </a>
                      <% } %>
                    <% } %>
                  </ul>
                </div>
              <% } %>
            <% } %>
          </div>
        </div>

        <!-- ABOUT -->
        <div data-anchor="à-propos" id="section-about" class="section">
          <div class="container">
            <div class="right">
              <h3>À propos d'Atrois Studio</h3>
            </div>
            <div class="left">
              <p>
                Minimalisme et sobriété définissent Atrois Studio.
                <br><br>
                Ce studio de direction artistique maîtrise les codes du luxe et cultive le sens du détail. Il détourne les règles établies proposant ainsi une approche plus personnelle à chaque projet.
                <br><br>
                Atrois Studio se distingue par son style maîtrisé à l'esthétique épurée. Sa recherche de l’excellence le pousse à entretenir une exigence irréprochable.
                <br><br>
                L’image d’Atrois Studio se construit autour d’un travail intemporel dont technicité et raffinement en sont les fondements.
                <br><br>
                Atrois Studio manie les codes du luxe avec habileté. Son savoir-faire lui permet d’élaborer des projets d’exception dans les domaines de l'art, du design et de la mode.
              </p>
            </div>
          </div>
        </div>

        <!-- ABOUT -->
        <div data-anchor="contact" id="section-contact" class="section">
          <div class="container">
            <div class="columns">
              <div class="helper"></div>
              <div class="left">
                <p>
                  <span class="title">Contact</span>
                  <br>
                  <span class="regular"><a href="mailto:contact@atroistudio.com<">contact@atroistudio.com</a></span>
                </p>
                <br>
                <br>
                <br>
                <p>
                  <span class="title">Press & PR Department</span>
                  <br>
                  <span class="regular"><a href="mailto:press@atroistudio.com">press@atroistudio.com</a></span>
                </p>

                <p>
                  <span class="title">Project Management</span>
                  <br>
                  <span class="regular"><a href="mailto:project@atroistudio.com">project@atroistudio.com</a></span>
                </p>
                <br>
                <br>
                <p>
                  <span class="title">Internships</span>
                  <br>
                  <span class="regular"><a href="mailto:intern@atroistudio.com">intern@atroistudio.com</a></span>
                </p>

                <p class="lighter">
                  We try our best, but we cannot always reply to <br>
                  every application we receive. Please note that <br>
                  we won't be able to return printed portfolio in <br>
                  all applications.
                </p>
              </div>
              <div class="right">
                <p>
                  <span class="title">Catégorie Agent - Nom Agent</span>
                  <br>
                  <span class="italic">Nom du contact</span>
                  <br>
                  <span class="regular"><a href="mailto:contact@nomagent.com">contact@nomagent.com</a></span>
                </p>
                <p class="lighter">
                  +33 (0) 1 23 45 67 89
                  <br>
                  1, rue nom de la rue long ou avenue
                  <br>
                  12345 Ville, Pays
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- PRESS -->
        <div data-anchor="presse" id="section-press" class="section">
          <div class="container">
            <div class="columns">
              <div class="helper"></div>
              <div class="left normal-scroll">
                <div class="header">
                  <h3>Publications</h3>
                </div>

                <div class="gradient-press"></div>

                <ul>
                  <% if (publications) { -%>
                    <% for(i = 0; i < publications.length; i++) { %>
                      <% if (!publications[i].award) { -%>
                        <li>
                          <a target="_blank" href="<%= publications[i].url %>">
                            <p>
                              <span class="season"><%= publications[i].season %></span>
                              <span class="title"><%= publications[i].title %></span>
                              <span class="client"><%= publications[i].client %></span>
                            </p>
                          </a>
                        </li>
                      <% } -%>
                    <% } %>
                  <% } %>
                  <li class="height-helper"></li>
                </ul>
              </div>
              <div class="right normal-scroll">
                <div class="header">
                  <h3>Awards</h3>
                </div>

                <div class="gradient-press"></div>

                <ul>
                  <% if (publications) { -%>
                    <% for(i = 0; i < publications.length; i++) { %>
                      <% if (publications[i].award) { -%>
                        <li>
                          <a target="_blank" href="<%= publications[i].url %>">
                            <p>
                              <span class="season"><%= publications[i].season %></span>
                              <span class="title"><%= publications[i].title %></span>
                              <span class="client"><%= publications[i].client %></span>
                            </p>
                          </a>
                        </li>
                      <% } -%>
                    <% } %>
                  <% } %>
                  <li class="height-helper"></li>
                </ul>
              </div>
            </div>
          </div>
        </div>

        <!-- STORE -->
        <div data-anchor="store" id="section-store" class="section">
          <div class="container">
            <h3>En construction</h3>
          </div>
        </div>
      </div>

      <!-- ADDITIONNALS -->
      <div id="additional" class="toggler">
        <div class="gradient-reverse"></div>
        <div class="logo">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 21.35 45.86"><title>logo</title><path d="M35.08,34.47a1.77,1.77,0,0,1-1.24-.5,2.28,2.28,0,0,1-.5-1.66V27a3.4,3.4,0,0,0-.83-2.74,3.69,3.69,0,0,0-2.8-.83H28.05c-1,0-1.36-.08-1.63-.36s-.39-.8-.39-1.8V16.09a2.7,2.7,0,0,0-1.75-2.77A2.69,2.69,0,0,0,26,10.55V5.34c0-1,.08-1.5.39-1.8s.66-.36,1.63-.36h.64V1.41h-1a3.69,3.69,0,0,0-2.8.83A3.4,3.4,0,0,0,24,5v5.29a2.28,2.28,0,0,1-.5,1.66,1.77,1.77,0,0,1-1.24.5H20.55a3.69,3.69,0,0,0-2.8.83A3.4,3.4,0,0,0,16.92,16v5.29a2.28,2.28,0,0,1-.5,1.66,1.77,1.77,0,0,1-1.24.5h-.72v1.77h.72a1.78,1.78,0,0,1,1.24.5,2.28,2.28,0,0,1,.5,1.66v5.29a3.39,3.39,0,0,0,.83,2.74,3.68,3.68,0,0,0,2.8.83h1V34.47h-.64c-1,0-1.36-.08-1.63-.36s-.39-.8-.39-1.8V27.11a2.7,2.7,0,0,0-1.75-2.77,2.69,2.69,0,0,0,1.75-2.77V16.36c0-1,.08-1.5.39-1.8s.66-.36,1.63-.36h1.36a1.78,1.78,0,0,1,1.24.5,2.28,2.28,0,0,1,.5,1.66v5.29a3.39,3.39,0,0,0,.83,2.74,3.68,3.68,0,0,0,2.8.83h1.66c1,0,1.36.08,1.63.36s.39.8.39,1.8v5.21a2.69,2.69,0,0,0,1.75,2.77,2.7,2.7,0,0,0-1.75,2.77v5.21c0,1-.08,1.5-.39,1.8s-.66.36-1.63.36h-.64v1.77h1a3.68,3.68,0,0,0,2.8-.83,3.39,3.39,0,0,0,.83-2.74V38.41a2.28,2.28,0,0,1,.5-1.66,1.78,1.78,0,0,1,1.24-.5h.72V34.47Z" transform="translate(-14.45 -1.41)"/></svg>
        </div>

        <div class="copyright">
          <p>© (2016 - 2017)</p>
        </div>

        <div class="social">
          <ul>
            <li><a target="-_blank" href="https://www.instagram.com/atroistudio/">Instagram</a></li>
            <li><a target="-_blank" href="https://www.facebook.com/atroistudio/">Facebook</a></li>
            <li><a target="-_blank" href="https://www.behance.net/atroistudio">Behance</a></li>
            <li><a target="-_blank" href="https://fr.pinterest.com/atroistudio/">Pinterest</a></li>
          </ul>
        </div>
      </div>

      <div id="additional-mobile">
        <div class="gradient-reverse"></div>
      </div>

      <div class="covers-container">
        <% for(var i=0; i<projects.length; i++) { %>
          <% if (projects[i].cover) { -%>
            <div class="cover" data-name="<%= projects[i].name %>-<%= projects[i].id %>">
              <img src="/uploads/projects/covers/<%= projects[i].cover %>" alt="<%= projects[i].name %>">
            </div>
          <% } %>
        <% } %>
      </div>
    </div>

    <script type="text/javascript" src="/libraries/jquery-3.1.1.min.js"></script>
    <script type="text/javascript" src="/libraries/jquery-ui.min.js"></script>
    <script type="text/javascript" src="/libraries/jquery.lazy.min.js"></script>
    <script type="text/javascript" src="/libraries/scrolloverflow.min.js"></script>
    <script type="text/javascript" src="/libraries/slick.min.js"></script>
    <script type="text/javascript" src="/libraries/jquery.fullPage.min.js"></script>
    <script type="text/javascript" src="/libraries/pnotify.custom.min.js"></script>
    <script type="text/javascript" src="/libraries/imagesloaded.min.js"></script>
    <script type="text/javascript" src="/javascripts/main.js"></script>

    <script type="text/javascript">
      $(window).on('load', function() {
        setTimeout(function() {
          $('#loader').fadeOut();
          $('#main').animate({opacity: 1}, 1000);
        }, 2000);
      });
    </script>

  </body>
</html>
